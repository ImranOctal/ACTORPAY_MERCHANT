<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/parentFull"
        android:background="@color/primary"
        android:orientation="vertical"
        tools:context=".ui.login.LoginActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar2" />

        <LinearLayout
            style="@style/parentFull"
            android:background="@drawable/top_round_drawble_white"
            android:orientation="vertical">


            <LinearLayout style="@style/parentFull"
                android:layout_marginTop="@dimen/_30sdp">

                <androidx.core.widget.NestedScrollView style="@style/parentFull">

                    <LinearLayout
                        style="@style/parent"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:gravity="center">

                        <LinearLayout
                            style="@style/parentFull"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="0dp">
                            <!--Business Name-->
                            <LinearLayout
                                android:id="@+id/dirstNameLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/firstName"
                                    style="@style/regular1Full"
                                    android:autofillHints="name"
                                    android:background="@color/transparent"
                                    android:hint="@string/first_name"
                                    android:inputType="textAutoComplete"
                                    android:singleLine="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnfirstName"
                                style="@style/errotextViewStyle"
                                android:visibility="gone" />




                            <TextView
                                android:id="@+id/errorOnMobile"
                                style="@style/errotextViewStyle"
                                android:visibility="gone" />

                            <!--Shop Address -->

                            <LinearLayout
                                android:id="@+id/lastNAmeLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/lastName"
                                    style="@style/regular1Full"
                                    android:autofillHints="postalAddress"
                                    android:background="@color/transparent"
                                    android:hint="@string/last_name"
                                    android:inputType="textAutoComplete"
                                    android:singleLine="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnLastName"
                                style="@style/errotextViewStyle"
                                android:visibility="gone" />

                            <!--Email -->
                            <LinearLayout
                                android:id="@+id/emailLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal"
                                android:weightSum="1">


                                <EditText
                                    android:id="@+id/emailEdit"
                                    style="@style/regular1Full"
                                    android:autofillHints="emailAddress"
                                    android:background="@color/transparent"
                                    android:hint="@string/your_email"
                                    android:inputType="textEmailAddress"
                                    android:singleLine="true" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/errorOnEmail"
                                style="@style/errotextViewStyle"
                                android:text="@string/oops_your_email_is_not_correct_or_empty"
                                android:visibility="gone" />

                            <!--Full Address-->

                            <LinearLayout
                                android:id="@+id/userNameLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/userName"
                                    style="@style/regular1Full"
                                    android:autofillHints="postalAddress"
                                    android:background="@color/transparent"
                                    android:hint="@string/userName"
                                    android:inputType="textAutoComplete"
                                    android:singleLine="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnUserName"
                                style="@style/errotextViewStyle"
                                android:visibility="gone" />
                            <!--Password-->
                            <LinearLayout
                                android:id="@+id/passLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/password"
                                    style="@style/regular1Full"
                                    android:background="@color/transparent"
                                    android:hint="@string/password"
                                    android:autofillHints="phone"
                                    android:inputType="textPassword"
                                    android:singleLine="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnPassword"
                                style="@style/errotextViewStyle"
                                android:visibility="gone" />




                            <!--Shop Act or licence number-->
                            <LinearLayout
                                android:id="@+id/mobileLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/mobileNumber"
                                    style="@style/regular1Full"
                                    android:autofillHints="creditCardSecurityCode"
                                    android:background="@color/transparent"
                                    android:hint="@string/mobile"
                                    android:inputType="textAutoComplete"
                                    android:singleLine="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnMobileLay"
                                style="@style/errotextViewStyle"
                                android:visibility="gone" />
                            <!--Resourse Type-->

                            <LinearLayout
                                android:id="@+id/resourseLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/address"
                                    style="@style/regular1Full"
                                    android:autofillHints="name"
                                    android:background="@color/transparent"
                                    android:hint="@string/address"
                                    android:inputType="textAutoComplete"
                                    android:singleLine="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnResourceType"
                                style="@style/errotextViewStyle"
                                android:visibility="gone" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <Button
                                    android:id="@+id/submit"
                                    style="@style/btn_main"
                                    android:elevation="2dp"
                                    android:paddingLeft="@dimen/_50sdp"
                                    android:paddingRight="@dimen/_50sdp"
                                    android:text="@string/submit" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</layout>