<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.transferMoney.PayFragment"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/beneficiary_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            tools:text="Pay John"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/poppins_bold"
            android:maxLength="100"
            />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_contact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="@dimen/_10sdp"
            >



            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/beneficiary_contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|center"
                android:background="@android:color/transparent"
                android:hint="Enter Mobile"
                android:clickable="false"
                android:focusable="false"
                android:inputType="text"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12sdp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/enter_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:text="@string/rs"
                android:paddingStart="@dimen/_10sdp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14sdp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/beneficiary_amount"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|center"
                android:background="@android:color/transparent"
                android:hint="Enter Amount"
                android:inputType="numberDecimal"
                android:paddingStart="@dimen/_25sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12sdp"
                android:maxLength="5"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/beneficiary_reason"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:background="@android:color/transparent"
                android:hint="Reason for Request Money"
                android:lines="4"
                android:maxLines="4"
                android:maxLength="500"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12sdp" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/payNow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:backgroundTint="@color/colorAccent"
            android:text="Request Money"
            android:fontFamily="@font/poppins_regular"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:cornerRadius="@dimen/_5sdp" />



    </LinearLayout>
</layout>
