<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        style="@style/parent">
        <LinearLayout
            android:orientation="horizontal"
            style="@style/TxtOutlineWrapHeight">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/productImage"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="vertical"
                style="@style/parent">
            <LinearLayout
                style="@style/parent"
                android:gravity="center"
                android:weightSum="1">
                <TextView
                    style="@style/Heading1_bold_weight"
                    android:layout_weight=".5"
                    android:ellipsize="end"
                    android:text="@string/demo_text"
                    android:id="@+id/titleOfOrder"/>
                <LinearLayout
                    style="@style/parentConstraint"
                    android:layout_weight=".3"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/status"
                        style="@style/TxtOutlineGreen"
                        android:text="@string/completed"
                        android:textColor="#2E7D32"
                        android:textSize="@dimen/_8ssp"
                       />
                    <Spinner
                        style="@style/spinner"
                        android:id="@+id/orderStatusSpinner"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight=".2"
                    style="@style/parentConstraint">
                    <ImageView
                       android:layout_height="@dimen/_20sdp"
                        android:layout_width="@dimen/_20sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/edit"
                        android:id="@+id/edit"/>
                    <ImageView
                        android:layout_height="@dimen/_20sdp"
                        android:layout_width="@dimen/_20sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/delete"
                        android:id="@+id/delete"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                style="@style/parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center|left"
                >
                <LinearLayout
                    style="@style/parentConstraintMatch"
                    android:layout_weight=".7">
                    <TextView
                        style="@style/regular1"
                        android:id="@+id/itemActualPricelbl"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_9sdp"
                        android:text="@string/item_price"
                        />
                    <TextView
                        style="@style/Heading2_bold_red"
                        android:id="@+id/actualPrice"
                        android:foreground="@drawable/strikethrough"
                        android:text="@string/demo_price"
                        />
                    <TextView
                        android:id="@+id/itemDealPricelbl"
                        style="@style/regular1"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_9sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="@string/dealPrice1"
                        />
                    <TextView
                        style="@style/Heading2_bold_primary"
                        android:id="@+id/dealPrice"
                        android:text="@string/demo_price"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/date"
                style="@style/regular1"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/_9sdp"
                android:text="10:30 PM Saturday 03-May 2021"
                />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</layout>