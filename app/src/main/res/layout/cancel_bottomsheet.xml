<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_10sdp"
        android:background="@drawable/top_corner"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:text="@string/add_note"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_16sdp"
            android:layout_height="wrap_content"/>



        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/orderstatus_bg"
            android:gravity="start"
            android:hint="Add description"
            android:padding="@dimen/_6ssp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnCancnel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/cancel1"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_14ssp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@drawable/btn_outline_gray" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/submit"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_14ssp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@drawable/btn_bg" />

        </LinearLayout>




    </LinearLayout>


</layout>