<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        style="@style/parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/llRoot"
            style="@style/TxtOutlineWrapHeight"
            android:orientation="vertical">


            <LinearLayout
                style="@style/parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/titleOfOrder"
                    style="@style/Heading1_bold_weight"
                    android:layout_weight=".6"
                    android:text="@string/demo_text" />

                <RelativeLayout
                    style="@style/parentConstraint"
                    android:layout_marginEnd="@dimen/_6ssp"
                    android:layout_weight=".2"
                    android:orientation="vertical"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/OrderType"
                        style="@style/TxtOutlineGreen"
                        android:text="@string/accept"

                        android:textColor="#2E7D32"
                        android:textSize="@dimen/_8ssp" />


                    <ImageView
                        android:id="@+id/ivNext"
                        android:layout_width="@dimen/_8ssp"
                        android:layout_height="@dimen/_8ssp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_6ssp"
                        android:src="@drawable/ic_next" />

                    <ImageView
                        android:id="@+id/ivDropDown"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_6ssp"
                        android:src="@drawable/ic_dropdown"
                        android:visibility="invisible" />


                </RelativeLayout>

                <LinearLayout
                    style="@style/parentConstraintMatch"
                    android:layout_weight=".2"
                    android:visibility="gone"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/edit"
                        style="@style/parentConstraintMatch"
                        android:layout_weight="@integer/one"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/edit" />

                    <ImageView
                        android:id="@+id/delete"
                        style="@style/parentConstraintMatch"
                        android:layout_weight="@integer/one"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/delete" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center|left">

                <LinearLayout
                    style="@style/parentConstraintMatch"
                    android:layout_weight=".7"
                    android:weightSum="2">

                    <TextView
                        style="@style/regular1"
                        android:layout_weight=".1"
                        android:text="@string/item_price"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/price"
                        style="@style/Heading2_bold_primary"
                        android:text="@string/demo_price" />

                </LinearLayout>


                <LinearLayout
                    style="@style/parentConstraintMatch"
                    android:layout_weight=".3"
                    android:gravity="center|right"
                    android:visibility="gone">

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="@integer/one"
                        android:checked="false"
                        android:thumbTint="@drawable/thum_switch"
                        android:trackTint="@color/primary"
                        android:trackTintMode="src_over"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/date"
                style="@style/regular1"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/id_demo"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/_9sdp" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            style="@style/spinner"
            android:id="@+id/card"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_32ssp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_width="@dimen/_80sdp"
            android:visibility="invisible"
            android:layout_height="wrap_content">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/orderStatusSpinner"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>