<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="vertical"
   style="@style/parent">
    <LinearLayout
        android:orientation="vertical"
        style="@style/TxtOutlineWrapHeight">
        <LinearLayout
            style="@style/parent"
            android:gravity="center"
            android:weightSum="1">
            <TextView
               style="@style/Heading1_bold_weight"
                android:layout_weight=".6"
                android:text="@string/demo_text"
                android:id="@+id/titleOfOrder"/>
            <LinearLayout
               style="@style/parentConstraint"
                android:layout_weight=".2"
                android:weightSum="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/OrderType"
                    style="@style/TxtOutlineGreen"
                    android:text="@string/accept"
                    android:textColor="#2E7D32"
                    android:textSize="@dimen/_8ssp"
                    app:drawableEndCompat="@drawable/drop_down_arrow" />
                <Spinner
                   style="@style/spinner"
                    android:id="@+id/orderStatusSpinner"/>
            </LinearLayout>
            <LinearLayout
                style="@style/parentConstraintMatch"
                android:layout_weight=".2"
                android:weightSum="2">
                <ImageView
                    style="@style/parentConstraintMatch"
                    android:layout_weight="@integer/one"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/edit"
                    android:id="@+id/edit"/>
                <ImageView
                    style="@style/parentConstraintMatch"
                    android:layout_weight="@integer/one"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/delete"
                    android:id="@+id/delete"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center|left"
            >
            <LinearLayout
                style="@style/parentConstraintMatch"
                android:layout_weight=".7"
                android:weightSum="2">
                <TextView
                    style="@style/regular1"
                    android:layout_weight=".1"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/_9sdp"
                    android:text="@string/item_price"
                    />
                <TextView
                    style="@style/Heading2_bold_primary"
                  android:id="@+id/price"
                    android:text="@string/demo_price"
                    />
            </LinearLayout>
           
            
            <LinearLayout
                style="@style/parentConstraintMatch"
                android:layout_weight=".3"
                android:gravity="center|right"
               >
                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/one"
                    android:checked="false"
                    android:thumbTint="@drawable/thum_switch"
                    android:trackTintMode="src_over"
                    android:trackTint="@color/primary"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

              
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/id_number"
            style="@style/regular1"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/_9sdp"
            android:text="@string/id_demo"
            />


    </LinearLayout>
    

</LinearLayout>
</layout>