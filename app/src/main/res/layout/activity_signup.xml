<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/parentFull"
        android:background="@color/primary"
        android:orientation="vertical"
        tools:context=".ui.login.LoginActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar2" />

        <LinearLayout
            style="@style/parentFull"
            android:background="@drawable/top_round_drawble_white"
            android:orientation="vertical">

            <LinearLayout
                style="@style/parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center">

                <ImageView
                    style="@style/viewParent"
                    android:contentDescription="@string/logo"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <LinearLayout style="@style/parentFull">

                <androidx.core.widget.NestedScrollView style="@style/parentFull">

                    <LinearLayout
                        style="@style/parent"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:gravity="center">

                        <LinearLayout
                            style="@style/parentFull"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="0dp">
                            <!--Email -->
                            <LinearLayout
                                android:id="@+id/emailLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal"
                                android:weightSum="1">


                                <EditText
                                    android:id="@+id/emailEdit"
                                    style="@style/regular1Full"
                                    android:autofillHints="emailAddress"
                                    android:background="@color/transparent"
                                    android:hint="@string/your_email"
                                    android:inputType="textEmailAddress"
                                    android:singleLine="true" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/errorOnEmail"
                                style="@style/errotextViewStyle"
                                android:text="@string/oops_your_email_is_not_correct_or_empty"
                                android:visibility="gone" />
                            <!--Password-->
                            <LinearLayout
                                android:id="@+id/passLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/password"
                                    style="@style/regular1Full"
                                    android:background="@color/transparent"
                                    android:hint="@string/password"
                                    android:autofillHints="phone"
                                    android:inputType="textPassword"
                                    android:singleLine="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnPassword"
                                style="@style/errotextViewStyle"
                                android:visibility="gone" />
                            <!--Business Name-->
                            <LinearLayout
                                android:id="@+id/businessLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/businessName"
                                    style="@style/regular1Full"
                                    android:autofillHints="name"
                                    android:background="@color/transparent"
                                    android:hint="@string/business"
                                    android:inputType="textAutoComplete"
                                    android:singleLine="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnBusinessName"
                                style="@style/errotextViewStyle"
                                android:visibility="gone" />

                            <!--Mobile Number-->

                            <LinearLayout
                                android:id="@+id/mobileLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <com.hbb20.CountryCodePicker
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:ccpDialog_allowSearch="true"
                                    app:ccpDialog_backgroundColor="@color/white"
                                    app:ccpDialog_fastScroller_bubbleColor="@color/primary"
                                    app:ccpDialog_fastScroller_bubbleTextAppearance="@style/regular_white"
                                    app:ccpDialog_fastScroller_handleColor="@color/colorAccent"
                                    app:ccpDialog_initialScrollToSelection="true"
                                    app:ccpDialog_keyboardAutoPopup="false"
                                    app:ccpDialog_searchEditTextTint="@color/gray"
                                    app:ccpDialog_showCloseIcon="true"
                                    app:ccpDialog_showFastScroller="true"
                                    app:ccpDialog_showFlag="true"
                                    app:ccpDialog_showPhoneCode="true"
                                    app:ccpDialog_showTitle="false"
                                    app:ccpDialog_textColor="@color/black"
                                    app:ccp_arrowColor="@color/colorAccent"
                                    app:ccp_arrowSize="20dp"
                                    app:ccp_autoDetectCountry="true"
                                    app:ccp_autoDetectLanguage="true"
                                    app:ccp_autoFormatNumber="false"
                                    app:ccp_clickable="true"
                                    app:ccp_contentColor="@color/black"
                                    app:ccp_countryAutoDetectionPref="SIM_ONLY"
                                    app:ccp_countryPreference="US,IN"
                                    app:ccp_defaultLanguage="ENGLISH"
                                    app:ccp_defaultNameCode="IN"
                                    app:ccp_flagBorderColor="@color/transparent"
                                    app:ccp_hintExampleNumber="true"
                                    app:ccp_hintExampleNumberType="FIXED_LINE"
                                    app:ccp_rememberLastSelection="true"
                                    app:ccp_selectionMemoryTag="signupCCP"
                                    app:ccp_showArrow="false"
                                    app:ccp_showFlag="true"
                                    app:ccp_showFullName="false"
                                    app:ccp_showNameCode="false"
                                    app:ccp_showPhoneCode="true"
                                    app:ccp_textGravity="RIGHT"
                                    app:ccp_textSize="@dimen/_12ssp" />

                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:background="@color/gray" />

                                <EditText
                                    android:id="@+id/mobileNumber"
                                    style="@style/regular1Full"
                                    android:autofillHints="phone"
                                    android:background="@color/transparent"
                                    android:hint="@string/mobile"
                                    android:inputType="phone"
                                    android:maxLength="10"
                                    android:singleLine="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnMobile"
                                style="@style/errotextViewStyle"
                                android:visibility="gone" />

                            <!--Shop Address -->

                            <LinearLayout
                                android:id="@+id/shopLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/shopAddress"
                                    style="@style/regular1Full"
                                    android:autofillHints="postalAddress"
                                    android:background="@color/transparent"
                                    android:hint="@string/shopAddress"
                                    android:inputType="textAutoComplete"
                                    android:singleLine="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnShopAddress"
                                style="@style/errotextViewStyle"
                                android:visibility="gone" />

                            <!--Full Address-->

                            <LinearLayout
                                android:id="@+id/AddressLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/address"
                                    style="@style/regular1Full"
                                    android:autofillHints="postalAddress"
                                    android:background="@color/transparent"
                                    android:hint="@string/address"
                                    android:inputType="textAutoComplete"
                                    android:singleLine="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnfullAddress"
                                style="@style/errotextViewStyle"
                                android:visibility="gone" />

                            <!--Shop Act or licence number-->
                            <LinearLayout
                                android:id="@+id/ShopActLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/shopAct"
                                    style="@style/regular1Full"
                                    android:autofillHints="creditCardSecurityCode"
                                    android:background="@color/transparent"
                                    android:hint="@string/shopact"
                                    android:inputType="textAutoComplete"
                                    android:singleLine="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnShopAct"
                                style="@style/errotextViewStyle"
                                android:visibility="gone" />
                            <!--Resourse Type-->

                            <LinearLayout
                                android:id="@+id/resourseLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/resourceType"
                                    style="@style/regular1Full"
                                    android:autofillHints="name"
                                    android:background="@color/transparent"
                                    android:hint="@string/resourceType"
                                    android:inputType="textAutoComplete"
                                    android:singleLine="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnResourceType"
                                style="@style/errotextViewStyle"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/termsAndConditionlay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:gravity="center"
                                android:weightSum="1">

                                <CheckBox
                                    android:id="@+id/rememberMe"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".07"
                                    android:checked="false" />

                                <TextView
                                    style="@style/regular1"
                                    android:layout_width="0dp"
                                    android:layout_weight=".52"
                                    android:text="@string/termsTxt"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/_8ssp" />

                                <TextView
                                    android:id="@+id/terms"
                                    style="@style/regular1_primary"
                                    android:layout_width="0dp"
                                    android:layout_weight=".18"
                                    android:text="@string/terms_and_condition"
                                    android:textSize="@dimen/_7ssp" />

                                <TextView
                                    style="@style/regular1"
                                    android:layout_width="0dp"
                                    android:layout_weight=".07"
                                    android:text="@string/and"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/_8ssp" />

                                <TextView
                                    android:id="@+id/privacy"
                                    style="@style/regular1_primary"
                                    android:layout_width="0dp"
                                    android:layout_weight=".18"
                                    android:text="@string/privacy"
                                    android:textSize="@dimen/_7ssp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <Button
                                    android:id="@+id/signinBtn"
                                    style="@style/btn_main"
                                    android:elevation="2dp"
                                    android:paddingLeft="@dimen/_50sdp"
                                    android:paddingRight="@dimen/_50sdp"
                                    android:text="@string/signup" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/loginLay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:gravity="center">


                                <TextView
                                    style="@style/regular1"
                                    android:text="@string/alreadySignup"
                                    android:textColor="@color/gray" />

                                <TextView
                                    android:id="@+id/login"
                                    style="@style/regular1_primary"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="@string/login" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</layout>