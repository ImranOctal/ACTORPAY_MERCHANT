<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/parentFull"
        android:background="@color/primary"
        android:orientation="vertical"
        tools:context=".ui.login.LoginActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar2" />

        <LinearLayout
            style="@style/parentFull"
            android:background="@drawable/top_round_drawble_white"
            android:orientation="vertical">

            <LinearLayout
                style="@style/parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center">

                <ImageView
                    style="@style/viewParent"
                    android:contentDescription="@string/logo"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <LinearLayout style="@style/parentFull">

                <androidx.core.widget.NestedScrollView
                    style="@style/parentFull">
                    <LinearLayout
                        style="@style/parent"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:gravity="center">

                        <LinearLayout
                            style="@style/parentFull"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="0dp">
                            <!--Email -->



                                <EditText
                                    android:id="@+id/emailEdit"
                                    style="@style/TxtOutlineCustom"
                                    android:autofillHints="emailAddress"
                                    android:hint="@string/your_email"
                                    android:maxLength="100"
                                    android:inputType="textEmailAddress"
                                    android:singleLine="true" />



                            <TextView
                                android:id="@+id/errorOnEmail"
                                style="@style/errotextViewStyle"
                                android:text="@string/oops_your_email_is_not_correct_or_empty"
                                android:visibility="gone" />
                            <!--Password-->
                            <LinearLayout
                                android:id="@+id/passLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/password"
                                    style="@style/regular1Full"
                                    android:width="0dp"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:hint="@string/password"
                                    android:autofillHints="phone"
                                    android:inputType="textPassword"
                                    android:singleLine="true" />

                                <ImageView
                                    android:id="@+id/signup_password_show_hide"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/hide"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_5sdp"
                                    />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnPassword"
                                style="@style/errotextViewStyle"
                                android:text="@string/oops_your_password_is_not_valid"
                                android:visibility="gone" />
                            <!--Business Name-->


                                <EditText
                                    android:id="@+id/businessName"
                                    style="@style/TxtOutlineCustom"
                                    android:autofillHints="name"
                                    android:hint="@string/business"
                                    android:inputType="textAutoComplete"
                                    android:maxLength="50"
                                    android:singleLine="true" />



                            <TextView
                                android:id="@+id/errorOnBusinessName"
                                style="@style/errotextViewStyle"
                                android:text="@string/field_should_not_be_empty"
                                android:visibility="gone" />

                            <!--Mobile Number-->

                            <LinearLayout
                                android:id="@+id/mobileLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/country_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:gravity="center"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    >
                                    <ImageView
                                        android:layout_width="@dimen/_18sdp"
                                        android:layout_height="@dimen/_18sdp"
                                        android:src="@drawable/flag_india"
                                        />
                                    <TextView
                                        android:id="@+id/code_picker"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="@dimen/_5sdp"
                                        android:paddingEnd="@dimen/_5sdp"
                                        tools:text="+91"
                                        android:gravity="center"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/text_color"
                                        android:fontFamily="@font/poppins_regular"
                                        android:drawableEnd="@drawable/drop_down_arrow"
                                        android:drawablePadding="@dimen/_5sdp"
                                        />


                                </LinearLayout>

                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:background="@color/gray" />

                                <EditText
                                    android:id="@+id/mobileNumber"
                                    style="@style/regular1Full"
                                    android:autofillHints="phone"
                                    android:background="@color/transparent"
                                    android:hint="@string/mobile"
                                    android:inputType="number"
                                    android:maxLength="15"
                                    android:singleLine="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnMobile"
                                style="@style/errotextViewStyle"
                                android:text="@string/error_phone"
                                android:visibility="gone" />

                            <!--Shop Address -->



                                <EditText
                                    android:id="@+id/shopAddress"
                                    style="@style/TxtOutlineCustom"
                                    android:autofillHints="postalAddress"
                                    android:hint="@string/shopAddress"
                                    android:inputType="textAutoComplete"
                                    android:singleLine="true" />

                            <TextView
                                android:id="@+id/errorOnShopAddress"
                                style="@style/errotextViewStyle"
                                android:text="@string/field_should_not_be_empty"
                                android:visibility="gone" />

                            <!--Full Address-->


                                <EditText
                                    android:id="@+id/address"
                                    style="@style/TxtOutlineCustom"
                                    android:autofillHints="postalAddress"
                                    android:hint="@string/address"
                                    android:inputType="textAutoComplete"
                                    android:singleLine="true" />

                            <TextView
                                android:id="@+id/errorOnfullAddress"
                                style="@style/errotextViewStyle"
                                android:text="@string/field_should_not_be_empty"
                                android:visibility="gone" />

                            <!--Shop Act or licence number-->


                                <EditText
                                    android:id="@+id/shopAct"
                                    style="@style/TxtOutlineCustom"
                                    android:autofillHints="creditCardSecurityCode"
                                    android:hint="@string/shopact"
                                    android:inputType="textAutoComplete"
                                    android:singleLine="true" />



                            <TextView
                                android:id="@+id/errorOnShopAct"
                                style="@style/errotextViewStyle"
                                android:text="@string/field_should_not_be_empty"
                                android:visibility="gone" />
                            <!--Resourse Type-->

                      <!--      <LinearLayout
                                android:id="@+id/resourseLay"
                                style="@style/TxtOutline2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/resourceType"
                                    style="@style/regular1Full"
                                    android:autofillHints="name"
                                    android:background="@color/transparent"
                                    android:hint="@string/resourceType"
                                    android:inputType="textAutoComplete"
                                    android:singleLine="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/errorOnResourceType"
                                style="@style/errotextViewStyle"
                                android:visibility="gone" />
                                -->

                            <LinearLayout
                                android:id="@+id/termsAndConditionlay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:gravity="center"
                                android:weightSum="1">

                                <CheckBox
                                    android:id="@+id/rememberMe"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:checked="true" />

                                <TextView
                                    android:id="@+id/signup_terms_text"
                                    style="@style/regular1"
                                    android:layout_width="match_parent"
                                    android:text="@string/termsTxt"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/_10ssp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <Button
                                    android:id="@+id/signupbtn"
                                    style="@style/btn_main"
                                    android:elevation="2dp"
                                    android:paddingLeft="@dimen/_50sdp"
                                    android:paddingRight="@dimen/_50sdp"
                                    android:text="@string/signup" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/loginLay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:gravity="center">


                                <TextView
                                    style="@style/regular1"
                                    android:text="@string/alreadySignup"
                                    android:textColor="@color/gray" />

                                <TextView
                                    android:id="@+id/login"
                                    style="@style/regular1_primary"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="@string/login" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</layout>