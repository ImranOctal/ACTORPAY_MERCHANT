            android:name=".ui.manageProduct.ManageProductActivity"
            android:exported="false"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.subAdmin.SubMerchantActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.commission.CommissionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.roles.details.RoleDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.outlet.updateoutlet.UpdateOutletActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.roles.RolesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.outlet.addoutlet.AddOutletActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.outlet.OutletActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.more.FaqActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.more.MoreActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.manageOrder.OrderDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.content.ContentActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.subAdmin.addSubMerchant.CreateSubAdminActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.payroll.PayRollActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.manageOrder.ManageOrderActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.addnewproduct.AddNewProduct"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.updateproduct.UpdateProduct"
            android:exported="false"
